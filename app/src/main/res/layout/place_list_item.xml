<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/list_item_place_image_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/list_item_place_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@android:color/holo_orange_light"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/list_item_place_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_item_place_image_container"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#494949"
                android:textSize="20sp"
                android:text="Temp text lorem temp"
                />
            <TextView
                android:id="@+id/list_item_place_vicinity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_item_place_name"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#616161"
                android:textSize="16sp"
                android:text="vicinity"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <View
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="@color/colorPrimary"
    />

</LinearLayout>